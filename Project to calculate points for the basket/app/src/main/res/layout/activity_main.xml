<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#DECCCC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/text"
           android:gravity="center"
           android:text="A Basketball Game :D"
           android:textSize="30sp"
           android:textColor="#6621E0"
           android:textStyle="italic"
           android:background="#D56363"
           android:padding="13dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toEndOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/text1"
            android:layout_margin="55dp"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/text2"
            android:layout_margin="55dp"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="+3 Points"
            android:id="@+id/btn1"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text2"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="+3 Points"
            android:id="@+id/btn2"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="+2 Points"
            android:id="@+id/btn3"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="+2 Points"
            android:id="@+id/btn4"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn3"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="+1 Points"
            android:id="@+id/btn5"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn4"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="+1 Points"
            android:id="@+id/btn6"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintStart_toStartOf="@+id/btn6"
            app:layout_constraintEnd_toEndOf="@+id/btn5"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="End Game "
            android:id="@+id/btn7"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cornerRadius="10dp"
            android:textSize="15sp"
            android:text="Reset"
            android:id="@+id/btn8"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/egyptian_flag"
            android:id="@+id/image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
